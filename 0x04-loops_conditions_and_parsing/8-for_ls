#!/usr/bin/env bash

# Display the part of the name after the first dash for regular files in the
#current directory, excluding hidden files.

for file in *; do
    if [ -f "$file" ] && [[ ! "$file" =~ ^\. ]]; then
        name_part=$(echo "$file" | cut -d'-' -f2-)
        echo "$name_part"
    fi
done
