#!/usr/bin/env bash
# This script stops the 4-to_infinity_and_beyond process using pkill.

# Send a SIGTERM signal to stop the 4-to_infinity_and_beyond process
pkill -x "4-to_infinity_and_beyond"

# Check if the process was found and stopped
if [ $? -eq 0 ]; then
    echo "4-to_infinity_and_beyond process has been stopped."
else
    echo "4-to_infinity_and_beyond process is not running."
fi
