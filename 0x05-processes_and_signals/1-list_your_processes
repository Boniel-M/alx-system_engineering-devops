#!/usr/bin/env bash
# This script displays the PID and process name of processes containing the word "bash" using the /proc filesystem.

# Loop through each directory in /proc (corresponding to a process)
for proc_dir in /proc/*/; do
    # Get the PID from the directory name
    pid=$(basename "$proc_dir")

    # If the cmdline file exists and contains the word "bash", extract and print the process name and PID
    if grep -q "bash" "$proc_dir/cmdline" 2>/dev/null; then
        process_name=$(tr -d '\0' < "$proc_dir/cmdline" | cut -d ' ' -f 1)
        echo "$pid $process_name"
    fi
done
