#!/usr/bin/env bash
# This script displays "To infinity and beyond" indefinitely with a sleep 2 in between each iteration.
# It responds to the SIGTERM signal with "I am invincible!!!"

# Function to handle SIGTERM signal
function handle_sigterm {
    echo "I am invincible!!!"
    exit 0
}

# Register the handle_sigterm function to be called on SIGTERM signal
trap handle_sigterm SIGTERM

# Loop to display the message indefinitely
while true; do
    echo "To infinity and beyond"
    sleep 2
done
