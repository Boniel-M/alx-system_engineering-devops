#!/usr/bin/env bash
# This script displays the PID and process name of processes containing the word "bash".

# Loop through each directory in /proc (corresponding to a process)
for proc_dir in /proc/*/; do
    # Get the PID from the directory name
    pid=$(basename "$proc_dir")

    # If the cmdline file exists and contains the word "bash", extract and print the process name and PID
    if [[ -f "$proc_dir/cmdline" ]]; then
        if grep -q "bash" "$proc_dir/cmdline"; then
            process_name=$(tr -d '\0' < "$proc_dir/cmdline" | sed 's/\x00/ /g')
            echo "PID: $pid, Process Name: $process_name"
        fi
    fi
done
